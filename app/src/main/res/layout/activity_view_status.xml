<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ViewStatus"
    android:background="#fff">


    <androidx.cardview.widget.CardView
        android:layout_margin="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Victim Name"
                android:textSize="20sp"
                android:id="@+id/txtStatusVictimName"/>

            <TextView
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complaint"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/txtStatusVictimName"
                android:id="@+id/txtStatusComplaint"/>
            <TextView
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Victim Name"
                android:layout_below="@+id/txtStatusComplaint"
                android:id="@+id/txtStatusRegion"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>